{
    "name": "cogent",
    "displayName": "Cogent",
    "description": "Cogent is a Copilot extension that gives it agenting capabilities like executing commands, editing and reading files, and more.",
    "version": "2.0.0",
    "engines": {
        "vscode": "^1.95.0"
    },
    "categories": [
        "Other",
        "AI"
    ],
    "icon": "assets/cogent.jpeg",
    "license": "MIT",
    "publisher": "kturung",
    "repository": {
		"type": "git",
		"url": "https://github.com/kturung/cogent"
	},
    
    "main": "./out/extension.js",
    "contributes": {
        "configuration": {
            "title": "Cogent",
            "properties": {
                "cogent.use_full_workspace": {
                    "type": "boolean",
                    "default": false,
                    "description": "Include full workspace content in the initial prompt. If disabled, files will be read on demand.\n\n Note: Not recommended for large workspaces.",
                    "order": 1
                },
                "cogent.autoConfirmTools": {
                    "type": "object",
                    "properties": {
                        "writeFile": {
                            "type": "boolean",
                            "default": false,
                            "description": "Auto confirm file creation operations"
                        },
                        "updateFile": {
                            "type": "boolean",
                            "default": false,
                            "description": "Auto confirm file update operations"
                        },
                        "runCommand": {
                            "type": "boolean",
                            "default": false,
                            "description": "Auto confirm command execution"
                        },
                        "applyDiff": {
                            "type": "boolean",
                            "default": false,
                            "description": "Auto confirm diff apply operations"
                        }
                        ,
                        "removeFile": {
                            "type": "boolean",
                            "default": false,
                            "description": "Auto confirm file/directory delete operations"
                        }
                    },
                    "additionalProperties": false,
                    "default": {
                        "writeFile": false,
                        "updateFile": false,
                        "runCommand": false,
                        "applyDiff": false,
                        "removeFile": false
                    },
                    "description": "Configure which tools should auto-confirm their operations without showing confirmation dialog",
                    "order": 2
                },
                "cogent.debug": {
                    "type": "boolean",
                    "default": false,
                    "description": "Enable debug logging in the output channel",
                    "order": 3
                },
                "cogent.commandTimeout": {
                    "type": "number",
                    "default": 45,
                    "description": "Timeout in seconds for terminal commands",
                    "order": 4
                }
            }
        },
        "chatParticipants": [
      {
        "id": "cogent.assistant",
        "name": "cogent",
        "description": "AI-powered development assistant",
        "isSticky": true
      }
    ],
        "languageModelTools": [
            {
                "name": "cogent_writeFile",
                "tags": ["files", "create"],
                "displayName": "Create New File",
                "modelDescription": "Create a new file in the workspace with specified content",
                "inputSchema": {
                    "type": "object",
                    "properties": {
                        "path": {
                            "type": "string",
                            "description": "Relative path for the new file"
                        },
                        "content": {
                            "type": "string",
                            "description": "The full text content to write into the file"
                        }
                    },
                    "required": ["path", "content"]
                }
            },
            {
                "name": "cogent_updateFile",
                "tags": ["files", "update"],
                "displayName": "Update File",
                "modelDescription": "Update an existing file in the workspace with new content",
                "inputSchema": {
                    "type": "object",
                    "properties": {
                        "path": {
                            "type": "string",
                            "description": "Relative path to the file"
                        },
                        "content": {
                            "type": "string",
                            "description": "New content for the file"
                        }
                    },
                    "required": ["path", "content"]
                }
            },
            {
                "name": "cogent_runCommand",
                "tags": ["terminal", "command"],
                "displayName": "Run Command",
                "modelDescription": "Execute a command in the VS Code terminal",
                "inputSchema": {
                    "type": "object",
                    "properties": {
                        "command": {
                            "type": "string",
                            "description": "Command to execute"
                        }
                    },
                    "required": ["command"]
                }
            },
            {
                "name": "cogent_readFile",
                "tags": ["files", "read"],
                "displayName": "Read File",
                "modelDescription": "Read the contents of multiple files in the workspace",
                "inputSchema": {
                    "type": "object",
                    "properties": {
                        "paths": {
                            "type": "array",
                            "items": {
                                "type": "string",
                                "description": "Relative path to the file"
                            },
                            "description": "Array of file paths to read"
                        }
                    },
                    "required": ["paths"]
                }
            },
            {
                "name": "cogent_applyDiff",
                "tags": ["files", "update", "diff"],
                "displayName": "Apply Diff",
                "modelDescription": "This tool allows for precise, surgical replaces to files by specifying exactly what content to search for and what to replace it with",
                "inputSchema": {
                    "type": "object",
                    "properties": {
                        "path": {
                            "type": "string",
                            "description": "Relative path to the file to modify"
                        },
                        "diff": {
                            "type": "string",
                            "description": "Diff content in the format: <<<<<<< SEARCH\\n[search content]\\n=======\\n[replace content]\\n>>>>>>> REPLACE"
                        },
                        "start_line": {
                            "type": "number",
                            "description": "Line number where the search block starts"
                        },
                        "end_line": {
                            "type": "number",
                            "description": "Line number where the search block ends"
                        }
                    },
                    "required": ["path", "diff", "start_line", "end_line"]
                }
            }
            ,
            {
                "name": "cogent_removeFile",
                "tags": ["files", "delete"],
                "displayName": "Remove File/Directory",
                "modelDescription": "Delete a file or directory in the workspace. Use recursive=true for directories.",
                "inputSchema": {
                    "type": "object",
                    "properties": {
                        "path": { "type": "string", "description": "Relative path to delete" },
                        "recursive": { "type": "boolean", "description": "Whether to delete directories recursively" }
                    },
                    "required": ["path"]
                }
            },
            {
                "name": "cogent_getChangedFiles",
                "tags": ["git", "files"],
                "displayName": "Get Changed Files",
                "modelDescription": "Return a list of changed/untracked files in the workspace using git status --porcelain",
                "inputSchema": { "type": "object", "properties": {} }
            },
            {
                "name": "cogent_webSearch",
                "tags": ["web", "search"],
                "displayName": "Web Search",
                "modelDescription": "Perform a lightweight web search and return top results (uses DuckDuckGo HTML scraping)",
                "inputSchema": {
                    "type": "object",
                    "properties": {
                        "query": { "type": "string" },
                        "maxResults": { "type": "number" }
                    },
                    "required": ["query"]
                }
            },
            {
                "name": "cogent_fetchWebpage",
                "tags": ["web", "fetch"],
                "displayName": "Fetch Webpage",
                "modelDescription": "Fetch and return the raw HTML/text of a URL",
                "inputSchema": { "type": "object", "properties": { "url": { "type": "string" } }, "required": ["url"] }
            }
            ,
            {
                "name": "cogent_getVscodeApi",
                "tags": ["vscode", "terminal"],
                "displayName": "Get VS Code API",
                "modelDescription": "Access VS Code API helpers like last terminal command, selection, and run commands",
                "inputSchema": {
                    "type": "object",
                    "properties": {
                        "action": { "type": "string", "enum": ["get_terminal_last_command", "get_terminal_selection", "runCommands"] },
                        "commands": { "type": "array", "items": { "type": "string" } }
                    },
                    "required": ["action"]
                }
            }
            ,
            {
                "name": "cogent_formatUserInput",
                "tags": ["text", "format"],
                "displayName": "Format User Input",
                "modelDescription": "Format and polish user-provided text for chat use (concise, polish, or none).",
                "inputSchema": {
                    "type": "object",
                    "properties": {
                        "text": { "type": "string" },
                        "style": { "type": "string", "enum": ["concise", "polish", "none"] }
                    },
                    "required": ["text"]
                }
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src",
        "test": "vscode-test"
    },
    "dependencies": {
    "@vscode/prompt-tsx": "^0.3.0-alpha.12",
    "node-fetch": "^2.6.7"
    },
    "devDependencies": {
        "@types/node": "^20.17.10",
        "@types/vscode": "^1.95.0",
        "@types/mocha": "^10.0.9",
        "@typescript-eslint/eslint-plugin": "^8.10.0",
        "@typescript-eslint/parser": "^8.7.0",
        "eslint": "^9.13.0",
        "typescript": "^5.6.3",
        "@vscode/test-cli": "^0.0.10",
        "@vscode/test-electron": "^2.4.1"
    }
}