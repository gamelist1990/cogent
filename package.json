{
    "name": "cogent",
    "displayName": "Cogent",
    "description": "Cogent is a Copilot extension that gives it agenting capabilities like executing commands, editing and reading files, and more.",
    "version": "2.0.0",
    "engines": {
        "vscode": "^1.95.0"
    },
    "categories": [
        "Other",
        "AI"
    ],
    "icon": "assets/cogent.jpeg",
    "license": "MIT",
    "publisher": "kturung",
    "repository": {
		"type": "git",
		"url": "https://github.com/kturung/cogent"
	},
    
    "main": "./out/extension.js",
    "activationEvents": [],
    "contributes": {
        "configuration": {
            "title": "Cogent",
            "properties": {
                "cogent.use_full_workspace": {
                    "type": "boolean",
                    "default": false,
                    "description": "Include full workspace content in the initial prompt. If disabled, files will be read on demand.\n\n Note: Not recommended for large workspaces.",
                    "order": 1
                },
                "cogent.alwaysUseTools": {
                    "type": "boolean",
                    "default": true,
                    "description": "When true, Cogent will prefer to invoke Language Model tools for operations by default (makes tools Required).",
                    "order": 1.5
                },
                "cogent.autoConfirmTools": {
                    "type": "object",
                    "properties": {
                        "removeFile": {
                            "type": "boolean",
                            "default": false,
                            "description": "Auto confirm file/directory delete operations"
                        }
                    },
                    "additionalProperties": false,
                    "default": {
                        "removeFile": false
                    },
                    "description": "Configure which tools should auto-confirm their operations without showing confirmation dialog",
                    "order": 2
                },
                "cogent.debug": {
                    "type": "boolean",
                    "default": false,
                    "description": "Enable debug logging in the output channel",
                    "order": 3
                },
                "cogent.commandTimeout": {
                    "type": "number",
                    "default": 60,
                    "description": "Timeout in seconds for terminal commands",
                    "order": 4
                }
            }
        },
        "chatParticipants": [
      {
        "id": "cogent.assistant",
        "name": "cogent",
        "description": "AI-powered development assistant",
        "isSticky": true
      }
    ],
        "languageModelTools": [
            {
                "name": "cogent_removeFile",
                "tags": ["files", "delete"],
                "displayName": "Remove File/Directory",
                "modelDescription": "Delete a file or directory in the workspace. Use recursive=true for directories.",
                "inputSchema": {
                    "type": "object",
                    "properties": {
                        "path": { "type": "string", "description": "Relative path to delete" },
                        "recursive": { "type": "boolean", "description": "Whether to delete directories recursively" }
                    },
                    "required": ["path"]
                }
            },
            {
                "name": "cogent_createFile",
                "tags": ["files", "write"],
                "displayName": "Create File",
                "modelDescription": "Create or overwrite a file in the workspace.",
                "inputSchema": {
                    "type": "object",
                    "properties": {
                        "path": { "type": "string", "description": "Path to create (absolute, workspace-relative, or file: URI)" },
                        "content": { "type": "string", "description": "File content" },
                        "overwrite": { "type": "boolean", "description": "Whether to overwrite if file exists" }
                    },
                    "required": ["path"]
                }
            },
            {
                "name": "cogent_getAbsolutePath",
                "tags": ["files", "path"],
                "displayName": "Get Absolute Path",
                "modelDescription": "Resolve a given path to an absolute filesystem path.",
                "inputSchema": {
                    "type": "object",
                    "properties": {
                        "path": { "type": "string", "description": "Path to resolve (absolute, workspace-relative, or file: URI)" }
                    },
                    "required": ["path"]
                }
            }
            ,
            {
                "name": "cogent_overwriteFile",
                "tags": ["files", "write"],
                "displayName": "Overwrite File",
                "modelDescription": "Unconditionally overwrite a file at the given path with provided content.",
                "inputSchema": {
                    "type": "object",
                    "properties": {
                        "path": { "type": "string", "description": "Path to overwrite (absolute, workspace-relative, or file: URI)" },
                        "content": { "type": "string", "description": "New file content" }
                    },
                    "required": ["path","content"]
                }
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src",
        "test": "vscode-test"
    },
    "dependencies": {
    "@vscode/prompt-tsx": "^0.3.0-alpha.12",
    "node-fetch": "^2.6.7"
    },
    "devDependencies": {
        "@types/node": "^20.17.10",
        "@types/vscode": "^1.95.0",
        "@types/mocha": "^10.0.9",
        "@typescript-eslint/eslint-plugin": "^8.10.0",
        "@typescript-eslint/parser": "^8.7.0",
        "eslint": "^9.13.0",
        "typescript": "^5.6.3",
        "@vscode/test-cli": "^0.0.10",
        "@vscode/test-electron": "^2.4.1"
    }
}